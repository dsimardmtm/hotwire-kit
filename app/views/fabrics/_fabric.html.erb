<div id="<%= dom_id fabric %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= fabric.name %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this fabric", fabric, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this fabric', edit_fabric_path(fabric), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
