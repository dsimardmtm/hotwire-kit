<div id="<%= dom_id lining %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= lining.name %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this lining", lining, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this lining', edit_lining_path(lining), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
